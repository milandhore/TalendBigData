<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">

    <requiredProperties>
        <requiredProperty key="componentName">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="componentNameLowerCase">
            <defaultValue>${componentName.toLowerCase()}</defaultValue>
        </requiredProperty>
        <requiredProperty key="componentNameClass">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="packageTalend">
            <defaultValue>org.talend.components</defaultValue>
        </requiredProperty>
        <requiredProperty key="packageDaikon">
            <defaultValue>org.talend.daikon</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <!-- Metadata for runtime module - main -->
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-runtime/src/main/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-runtime/src/main/resources/</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>__componentNameLowerCase__-runtime</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <!-- Metadata for runtime module - test -->
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-runtime/src/test/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>__componentNameLowerCase__-runtime</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <!-- Metadata for integration module - test -->
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-integration/src/test/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>__componentNameLowerCase__-integration</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <!-- Metadata for definition module - main -->
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-definition/src/main/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-definition/src/main/resources/</directory>
            <includes>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet packaged="true">
            <directory>__componentNameLowerCase__-definition/src/main/resources/</directory>
            <includes>
                <include>**/*.png</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>__componentNameLowerCase__-definition</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <!-- Metadata for definition module - test -->
        <fileSet filtered="true" packaged="true">
            <directory>__componentNameLowerCase__-definition/src/test/java/</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>__componentNameLowerCase__-definition</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
